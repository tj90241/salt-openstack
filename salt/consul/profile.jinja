{%- set domain = pillar['consul']['site']['domain'] -%}
export CONSUL_CACERT=/etc/consul/{{ domain }}-agent-ca.pem
export CONSUL_CLIENT_CERT=/etc/consul/cli-{{ domain }}.pem
export CONSUL_CLIENT_KEY=/etc/consul/cli-{{ domain }}-key.pem
export CONSUL_HTTP_ADDR=127.0.0.1:8501
export CONSUL_HTTP_SSL=true
